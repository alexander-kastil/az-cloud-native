@{
    ViewData["Title"] = "Home Page";
}

<style>
    .food-item {
        background-color: white;
        border-radius: 5px;
        margin-bottom: 15px;
        padding: 15px;
        padding-left: 20px;
        padding-right: 20px;
        box-shadow: 0px 0px 10px #e2e2e2;
        text-align: left;
        cursor: pointer;
        display:flex;
        font-size:13pt;
    }

    h1 {
        margin-bottom: 50px;
    }
</style>

<div class="text-center">
    <div style="display: flex">
        <div style="flex:1"></div>
        <div style="flex:2">
            @if (ViewBag.Food == null || ViewBag.Food.Count == 0)
            {
                <div>No Food :(</div>
            }
            @foreach (var food in ViewBag.Food)
            {
                <div class="food-item">
                    <div style="flex:12">
                        @food.Name
                    </div>
                    <div>
                        <img style="width:22px;flex:1" src="~/icons/edit.png" />
                    </div>
                </div>
            }
        </div>
        <div style="flex:1"></div>
    </div>
    <div>
    </div>
</div>